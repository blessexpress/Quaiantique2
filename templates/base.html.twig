<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset("css/navbar.css") }}">
        <link rel="stylesheet" href="{{asset("css/style.css") }}">
        <link rel="stylesheet" href="{{ asset('assets/bootstrap.css') }}">
        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body style="background-color: white">

    <nav id="myNavbar" class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <img class="logo" src="{{ asset('assets/img/logo QA.png') }}" >
            <div class="collapse navbar-collapse" id="navbarColor03" style="margin-left: 10%" >
                <ul class="navbar-nav me-auto" style="font-size: 20px">


                    <li class="nav-item" style="margin-left: 20%">
                        <a class="nav-link active" href="{{path("app_default") }}" >Accueil</a>
                        <span class="visually-hidden">(current)</span>
                    </li>

                    <li class="nav-item" style="margin-left: 20%">
                        <a class="nav-link" href="{{path("app_menu") }}">Menu</a>
                    </li>

                    <li class="nav-item" style="margin-left: 20%">
                        <a class="nav-link" href="{{path("app_contact") }}" >Contact</a>
                    </li>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                        <li class="nav-item" style="margin-left: 20%">
                            <a class="nav-link" href="{{path("app_mes_reservations") }}" >Mes Reservations</a>
                        </li>

                        <li class="nav-item" style="margin-left: 20%">
                            <a class="nav-link" href="{{path("app_logout") }}">Deconnexion</a>
                        </li>

                    {% else %}

                        <li class="nav-item" style="margin-left: 20%">
                            <a class="nav-link" href="{{path("app_reservations") }}" >Reservations</a>
                        </li>


                        <li class="nav-item" style="margin-left: 20%">
                            <a class="nav-link" href="{{path("app_login") }}">Connexion</a>
                        </li>

                    {% endif %}


                </ul>
            </div>
        </div>
    </nav>

        {% block body %}
        {% endblock %}

    </body>
    </html>


    </body>
</html>
